@model bd.log.entidades.LogEntry

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />

<div class="widget-body no-padding">
    <form asp-action="Create" id="adicionar" class="smart-form" novalidate="novalidate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="LogEntrys.L" />*@
        <fieldset>
         
            <div class="row">
                <!-- NEW COL START -->
                <article class="col-lg-12 col-lg-12 col-lg-12">
                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                        <div>
                            <div class="jarviswidget-editbox">
                            </div>
                            <div class="widget-body no-padding">

                                <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="LogEntryId" />
                                    <fieldset>
                                        <div class="row">

                                            <section class="col col-6">
                                                <legend>Objeto Anterior</legend>
                                                <p></p>
                                                <label class="textarea">
                                                    <i class="icon-prepend fa fa-pencil"></i>
                                                    <textarea rows="60" maxlength="1024" asp-for="ObjectPrevious" placeholder="@Html.DisplayNameFor(model=>model.ObjectPrevious)" disabled="true"></textarea>
                                                    <span asp-validation-for="ObjectPrevious" class="text-danger"></span>
                                                </label>
                                            </section>
                                            <separator></separator>
                                            <section class="col col-6">
                                                <legend>Objeto  Nuevo</legend>
                                                <p></p>
                                                <label class="textarea">
                                                    <i class="icon-prepend fa fa-pencil"></i>
                                                    <textarea rows="60" maxlength="1024" asp-for="ObjectNext" placeholder="@Html.DisplayNameFor(model=>model.ObjectNext)" disabled="true"></textarea>
                                                    <span asp-validation-for="ObjectNext" class="text-danger"></span>
                                                </label>
                                            </section>
                                        </div>
                                    </fieldset>
                                    <footer>
                                        <span class="text-danger">@ViewData["Error"]</span>

                                        <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                    </footer>
                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </fieldset>
        <footer>
          
        </footer>
    </form>
</div>

@section Scripts {

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
    $(document).ready(function () {
        Init_Select2();
    });
    </script>
}